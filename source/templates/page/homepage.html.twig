        <h1 class="text-3xl font-bold">Welcome to our shop</h1>
        {{ component('randomNumber') }}
    </div>
    <ul class="grid grid-cols-4 gap-4">
        {% for product in products %}
            <li>
            {% include 'product/card.html.twig' with {'product': product} %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}